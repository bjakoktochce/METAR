<Window x:Class="METAR.AirportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:METAR"
        mc:Ignorable="d"
        Title="Select Airport" Height="200" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="75px" />
        </Grid.RowDefinitions>
   
        <Button Content="OK"  HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Center" Width="100" Click="Button_Click" Grid.Row="1"/>
        <Button x:Name="CancelButton" Content="Cancel"  HorizontalAlignment="Left" Margin="225,0,0,0" VerticalAlignment="Center" Width="100" Grid.Row="1" Click="CancelButton_Click" Grid.ColumnSpan="2"/>
        <Label Content="Enter airport ICAO code: " HorizontalAlignment="Left" Margin="75,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="1.064,0.541"/>
        <TextBox HorizontalAlignment="Left" Margin="224,0,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Name="AirportTextBox" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
